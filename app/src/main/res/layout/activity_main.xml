<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:backgroundTint="@color/colorAccent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_logo_main"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@drawable/chattrbox" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/glitzstick"
        android:text="by: CeriOSly"
        android:textAlignment="center"
        android:textColor="#2470f9"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_logo_main"
        app:layout_constraintStart_toStartOf="@+id/imageView_logo_main"
        app:layout_constraintTop_toBottomOf="@+id/imageView_logo_main" />
</android.support.constraint.ConstraintLayout>